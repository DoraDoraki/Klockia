
@model List<Klockia.Models.ShopingCartViewModel>

@{
    ViewBag.Title = "Your Cart";
}

<h2>Your Cart</h2>


<h2>Checkout</h2>



<div class="form-horizontal">
    <h4>Product</h4>
    <hr />

    @foreach (var item in Model)
    {
        <div class="row">

            <div class="form-group">
                @Html.LabelFor(model => item.Product.ImageUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 imageContainerCart">
                    <img src="@item.Product.ImageUrl" alt="ProductImage" />
                    @Html.ValidationMessageFor(model => item.Product.ImageUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => item.Product.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => item.Product.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.Product.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => item.Product.Brand, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => item.Product.Brand, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.Product.Brand, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => item.Product.Color, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => item.Product.Color, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => item.Product.Color, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }

    <span>Totalsumma:@Model.First().TotalPrice</span>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @using (Html.BeginForm("CreateOrder", "Home"))
            {
                <input type="hidden" name="cart" id="hiddenCart" />

                <input type="submit" value="Köp" class="btn btn-default" />
            }
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}